{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": "./src",               // Added for path resolution
    "paths": {
      "*": ["*", "../dist/*"]         // Allow mapping to dist directory
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}
