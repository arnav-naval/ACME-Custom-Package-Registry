#!/bin/bash

# ./run install
if [ "$1" == "install" ]; then
  echo "Installing Node program and dependencies"
  npm install

# ./run test
elif [ "$1" == "test" ]; then
  echo "Testing Node program"
  exit 0
  # npm start

# ./run URL_FILE
elif [ "$1" == *.txt ]; then
  echo "Running Node program on URLs in $1"
  npm start < $1

# catch-all for errors
else 
  echo "Error: Invalid argument"
  echo "Usage: ./run [install|test|URL_FILE]"
  exit 1
fi