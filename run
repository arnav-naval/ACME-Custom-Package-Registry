#!/bin/bash

# ./run install
if [ "$1" == "install" ]; then
  echo "Installing Node program and dependencies"
  npm install
fi

# ./run test
if [ "$1" == "test" ]; then
  echo "Testing Node program"
  npm start
fi

# ./run URL_FILE
if [ "$1" == *.txt ]; then
  echo "Running Node program on URLs in $1"
  npm start < $1
fi